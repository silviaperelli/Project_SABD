<configuration>
    <property>
        <name>dfs.replication</name>
        <value>1</value>
    </property>

    <property>
        <name>dfs.permissions.enabled</name>
        <value>false</value> <!-- OK per lo sviluppo -->
    </property>

    <property>
        <name>dfs.namenode.name.dir</name>
        <value>file:///hadoop/dfs/name</value> <!-- Path interno al container del namenode -->
    </property>

    <property>
        <name>dfs.datanode.data.dir</name>
        <value>file:///hadoop/dfs/data</value> <!-- Path interno al container del datanode -->
    </property>

    <!-- Opzionale ma raccomandato per chiarezza e potenziali problemi di rete -->
    <property>
        <name>dfs.namenode.http-address</name>
        <value>namenode:9870</value> <!-- O 0.0.0.0:9870 se preferisci bindare a tutte le interfacce interne -->
    </property>

    <!-- Opzionale, utile in alcuni scenari di rete con Docker -->
    <property>
        <name>dfs.client.use.datanode.hostname</name>
        <value>true</value>
    </property>
    <property>
        <name>dfs.datanode.use.datanode.hostname</name>
        <value>true</value>
    </property>

    <!-- Opzionale: Abilita WebHDFS, spesso utile e abilitato di default in molte distribuzioni -->
    <!-- L'immagine bde2020 dovrebbe giÃ  averlo abilitato, ma esplicitarlo non guasta -->
    <property>
        <name>dfs.webhdfs.enabled</name>
        <value>true</value>
    </property>
</configuration>